<% include partials/header %>

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

  <link rel="stylesheet" href="/stylesheets/profilePage.css">




  
  <div class="container-fluid">
    <div class="fb-profile">
        <img align="left" class="img-thumbnail " src="/images/ghana.jpg" alt="Profile image example"/>
        <img align="left" class="fb-image-profile thumbnail img-thumbnail" src="/images/books.jpg" />
        <div class="fb-profile-text">
            <h1><%=user.username%></h1>
              <p><a class="btn btn-warning" href="/posts/new">Add New Post</a></p>
        </div>
    </div>
</div> 

<hr/>
<div class="container-fluid">
  <div class="row">
     <div class="col">
 <h3>My Profile</h3>
 <h4>Your total post is: <%=posts.length%></h4>
 <hr/>
 <p>First Name: <%=user.firstName%></p>
 <p>Last Name: <%=user.lastName%></p>
 <p>Email: <%=user.email%></p>
 <p>Verified: <%=user.isVerified%></p>
 <p>Date Joined: <%=user.dateJoined%></p>
     </div>
     <hr/>
  </div>

  <h3 class="text-center">My Posts</h3>
  <hr/>



    <div class="container-fluid">
      <div class="row mt-3">
     <% posts.forEach(function(post){ %>
        <div class="col-lg-4 col-md-12">
<img class='img-thumbnail' src="<%= post.image %>">


 <iframe class='img-thumbnail' width="560" height="900" src="https://www.youtube.com/embed/<%=post.videoLink%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
 <h4><em><%=post.name %></em></h4>
                       <hr/>

<p><%=post.description %></p>
     <p>
        <a href="/posts/<%= post._id %>" class="btn btn-primary">More Info</a>
     </p>
            </div>  
        <% }); %>
    </div>
    </div>
      
<% include partials/footer %>